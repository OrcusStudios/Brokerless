<div class="container-fluid p-0">
  <!-- Hero Section -->
  <div class="hero-section position-relative">
    <div class="bg-image w-100" style="height: 500px; background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/background.jpg'); background-size: cover; background-position: center;">
