<%- include("./partials/layout.ejs") %>

<div class="container py-2">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="mb-0">Login to RE-Marketplace</h2>
                </div>
                <div class="card-body p-4">
                    <form action="/users/login" method="POST">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
                            <label for="email">Email Address</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                            <label for="password">Password</label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe">
                                <label class="form-check-label" for="rememberMe">Remember Me</label>
                            </div>
                            <a href="/forgot-password" class="text-primary text-decoration-none">Forgot Password?</a>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">Login</button>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <p class="mb-2">Don't have an account?</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/users/register" class="btn btn-outline-primary">
                            <i class="bi bi-house-door me-2"></i>Buyer/Seller
                        </a>
                        <a href="/professionals/register" class="btn btn-outline-success">
                            <i class="bi bi-briefcase me-2"></i>Professional
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="/help" class="text-muted small">Need Help?</a>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>