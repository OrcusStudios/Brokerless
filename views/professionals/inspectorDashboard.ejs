<div class="container mt-4">
    <div class="row">
      <div class="col-12">
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Inspector Dashboard</h4>
          </div>
          <div class="card-body">
            <!-- Upcoming Inspections -->
            <h5>Upcoming Inspections</h5>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-light">
                  <tr>
                    <th>Property</th>
                    <th>Requested By</th>
                    <th>Inspection Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% upcomingInspections.forEach(inspection => { %>
                    <tr>
                      <td><%= inspection.listing.address %></td>
                      <td><%= inspection.requester.name %></td>
                      <td><%= new Date(inspection.date).toLocaleDateString() %></td>
                      <td>
                        <span class="badge bg-<%= inspection.status === 'scheduled' ? 'warning' : 'info' %>">
                          <%= inspection.status %>
                        </span>
                      </td>
                      <td>
                        <button class="btn btn-sm btn-info">View Details</button>
                        <button class="btn btn-sm btn-success">Upload Report</button>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            
            <!-- Recent Reports -->
            <h5 class="mt-4">Recent Reports</h5>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-light">
                  <tr>
                    <th>Property</th>
                    <th>Inspection Date</th>
                    <th>Report Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% completedInspections.forEach(inspection => { %>
                    <tr>
                      <td><%= inspection.listing.address %></td>
                      <td><%= new Date(inspection.date).toLocaleDateString() %></td>
                      <td>
                        <span class="badge bg-success">
                          Complete
                        </span>
                      </td>
                      <td>
                        <a href="<%= inspection.reportUrl %>" class="btn btn-sm btn-info" target="_blank">View Report</a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>